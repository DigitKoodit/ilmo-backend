{
  "compilerOptions": {
    "target": "esnext",
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "outDir": "dist"
  },
  "include": ["src/*"],
  "exclude": ["node_modules"]
}
